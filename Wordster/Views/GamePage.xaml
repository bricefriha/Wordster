                    <Grid>
                        <Label Text="L"
                               Style="{StaticResource TileText}"/>
                    </Grid>

                </NeoButton>
            </HorizontalStackLayout>
            <!-- line 3-->
            <HorizontalStackLayout HorizontalOptions="Center">
                <NeoButton BackgroundColor="{StaticResource DarkButtonBrush}"
                           Command="{Binding RemoveLetterCommand}"
